[Unit]
After       = network.target
Description = node-bmw daemon
Requires    = network.target

[Service]
Environment      = NODEPATH=/usr/lib/nodejs:/usr/lib/node_modules:/usr/local/lib/node_modules:/usr/local/node-bmw/node_modules
Environment      = NODE_PATH=/usr/lib/nodejs:/usr/lib/node_modules:/usr/local/lib/node_modules:/usr/local/node-bmw/node_modules
ExecStart        = /usr/bin/env node /usr/local/node-bmw/run.js
Group            = root
Restart          = always
StandardError    = syslog
StandardOutput   = syslog
SyslogIdentifier = node-bmw
User             = root
WorkingDirectory = /usr/local/node-bmw

[Install]
WantedBy = multi-user.target
